<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:id="@+id/home_fragment_item_group_item_container_cardview_id"
    style="@style/home_fragment_item_group_item_container_cardview">

    <LinearLayout style="@style/home_fragment_item_group_item_linearlayout">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            style="@style/home_fragment_item_group_item_image_cardview">

            <ImageView
                android:id="@+id/home_fragment_item_group_item_imageview"
                style="@style/home_fragment_item_group_item_imageview" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/home_item_group_textview"
            android:text="@string/sample_image_title"
            style="@style/home_fragment_item_group_item_textview" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

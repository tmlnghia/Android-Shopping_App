<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/cardview_danhsachsanpham"
    app:cardCornerRadius="4dp"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgItemSanPham"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/balo_tui_xach" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtItemTenSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:padding="2dp"
                android:textSize="20dp"
                android:paddingStart="5dp"/>
            <TextView
                android:id="@+id/txtItemGiaSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá sản phẩm"
                android:textColor="#f00"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="2dp"
                android:paddingStart="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtItemGiaCu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá cũ"
                    android:padding="2dp"
                    android:textSize="15dp"
                    android:paddingStart="5dp"/>

                <TextView
                    android:id="@+id/txtItemGiamGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Giảm giá"
                    android:textColor="#FFC20A"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>


            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBar2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4.5" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>